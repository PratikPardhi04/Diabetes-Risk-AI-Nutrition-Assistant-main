generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id           Int                @id @default(autoincrement())
  name         String             @db.VarChar(255)
  email        String             @unique(map: "email") @db.VarChar(255)
  passwordHash String             @map("password_hash") @db.VarChar(255)
  createdAt    DateTime           @default(now()) @map("created_at") @db.DateTime(0)
  chats        Chat[]
  assessments  HealthAssessment[]
  meals        Meal[]

  @@index([email], map: "idx_email")
  @@map("users")
}

model HealthAssessment {
  id            Int      @id @default(autoincrement())
  userId        Int      @map("user_id")
  age           Int
  gender        String   @db.VarChar(50)
  height        Decimal  @db.Decimal(10, 2)
  weight        Decimal  @db.Decimal(10, 2)
  familyHistory Boolean  @default(false) @map("family_history")
  activity      String   @db.VarChar(100)
  smoking       Boolean  @default(false)
  alcohol       String   @db.VarChar(50)
  diet          String   @db.VarChar(50)
  sleep         Int
  symptoms      String?  @db.Text
  riskLevel     String   @default("Pending") @map("risk_level") @db.VarChar(50)
  aiReason      String?  @map("ai_reason") @db.Text
  createdAt     DateTime @default(now()) @map("created_at") @db.DateTime(0)
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "health_assessments_ibfk_1")

  @@index([createdAt], map: "idx_created_at")
  @@index([riskLevel], map: "idx_risk_level")
  @@index([userId], map: "idx_user_id")
  @@map("health_assessments")
}

model Meal {
  id        Int      @id @default(autoincrement())
  userId    Int      @map("user_id")
  mealType  String   @map("meal_type") @db.VarChar(50)
  mealText  String   @map("meal_text") @db.Text
  calories  Decimal  @default(0.00) @db.Decimal(10, 2)
  carbs     Decimal  @default(0.00) @db.Decimal(10, 2)
  protein   Decimal  @default(0.00) @db.Decimal(10, 2)
  fat       Decimal  @default(0.00) @db.Decimal(10, 2)
  sugar     Decimal  @default(0.00) @db.Decimal(10, 2)
  fiber     Decimal  @default(0.00) @db.Decimal(10, 2)
  impact    String   @db.VarChar(50)
  notes     String?  @db.Text
  createdAt DateTime @default(now()) @map("created_at") @db.DateTime(0)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "meals_ibfk_1")

  @@index([createdAt], map: "idx_created_at")
  @@index([impact], map: "idx_impact")
  @@index([mealType], map: "idx_meal_type")
  @@index([userId], map: "idx_user_id")
  @@map("meals")
}

model Chat {
  id        Int      @id @default(autoincrement())
  userId    Int      @map("user_id")
  question  String   @db.Text
  answer    String   @db.Text
  createdAt DateTime @default(now()) @map("created_at") @db.DateTime(0)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "chats_ibfk_1")

  @@index([createdAt], map: "idx_created_at")
  @@index([userId], map: "idx_user_id")
  @@map("chats")
}
